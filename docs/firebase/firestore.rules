rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // FIRESTORE SECURITY RULES - KAMPUSMEAL
    // ============================================
    // Strategi: Semua akses HARUS melalui Backend API (NestJS)
    // Client (Mobile App) TIDAK boleh akses Firestore secara langsung
    // Backend menggunakan Firebase Admin SDK dengan full permission
    // ============================================
    
    // DEFAULT: Deny semua akses dari client
    match /{document=**} {
      allow read, write: if false;
    }
    
    // ============================================
    // OPTIONAL: Jika di masa depan perlu akses langsung dari client
    // (misalnya untuk real-time updates), uncomment dan sesuaikan rules di bawah
