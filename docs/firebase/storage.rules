rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // General rules: Public read, authenticated write
    // with basic file size and type validation
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size <= 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}